<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
@await Html.PartialAsync("_LayoutHeadPartial.cshtml")
<body>
    <div class="notfooter">
        <nav>
            <div>
                <a href="/users">
                    <h1 class="logo" data-test="logo">TaskManager</h1>
                </a>
            </div>
            <div>
                @{var role = ViewData["role"] == null ?
                                          (User.IsInRole("TodoAdmin") ? "Admin" : "User") :
                                          ViewData["role"];
                    <p>@User.Identity.Name as @role</p>
                }
                <a href="/users/changeRole">Change role</a>
                <a class="logout" href="/logout">Sign out</a>
            </div>
        </nav>
        @RenderBody()
    </div>
    @await Html.PartialAsync("_LayoutFooterPartial.cshtml")
</body>
</html>