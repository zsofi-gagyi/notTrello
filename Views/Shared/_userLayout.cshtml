<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="en">
@await Html.PartialAsync("_LayoutHeadPartial.cshtml")
<body>
    <div class="notfooter">
        <nav>
            <div>
                <a href="/users">
                    <h1 class="logo">TaskManager</h1>
                </a>
            </div>
            <div>
                <p>@User.Identity.Name as @(User.IsInRole("TodoAdmin") ? "Admin" : "User")</p>
                <a href="/users/changeRole">Change role</a>
                <a class="logout" href="/logout">Sign out</a>
            </div>
        </nav>
        @RenderBody()
    </div>
    <div class="footer">
        <a href="/users/APIguide">For developers: a guide to our API services</a>
        <p>This app uses the ASP.NET Core framework, and is hosted on Azure.</p>
    </div>
</body>
</html>